                android:strokeWidth="1"/>
            <group
                android:name="group"
                android:pivotX="18"
                android:pivotY="18"
                android:scaleX="0"
                android:scaleY="0">
                <path
                    android:name="filled"
                    android:pathData="M 18 25.906 L 27.27 31.5 L 24.809 20.953 L 33 13.859 L 22.215 12.945 L 18 3 L 13.785 12.945 L 3 13.859 L 11.191 20.953 L 8.73 31.5 Z M 18 25.906"
